{
  "hosting": {
    "public": "functions/public",
    "rewrites": [
      {
        "source": "/album/**",
        "function": "rewriter"
      },
      {
        "source": "/?fileId=:fileId",
        "destination": "/album/:fileId"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/js/env.js",
      "**/js/*-test.js"
    ]
  },
  "functions":
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }

}
